<% if @route.new_record? %>
  <%= title_and_banner "New Brand" %>
<% else %>
  <%= title_and_banner "Edit #{@route.name}" %>
<% end %>

<%= render 'nav', route: @route %>

<%= render partial: 'shared/form_errors', object: @route.errors %>

<%= form_for @route do |f| %>

  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>

  <%= f.submit 'Go' %>
<% end %>
